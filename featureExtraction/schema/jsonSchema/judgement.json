{
    "$defs": {
        "BenefitsReceivedDetail": {
            "additionalProperties": false,
            "properties": {
                "received": {
                    "description": "Whether benefits were received or to be received for trafficking.",
                    "title": "Received",
                    "type": "boolean"
                },
                "amount": {
                    "anyOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Amount of benefits received or to be received for trafficking in HKD, excluding the value of the drug itself. Only set to null if benefit amount is not explicitly stated.",
                    "title": "Amount"
                },
                "source": {
                    "description": "The exact match source text from which the benefits amount was extracted. Do not include any additional information in the source document.",
                    "title": "Source",
                    "type": "string"
                }
            },
            "required": [
                "received",
                "source"
            ],
            "title": "BenefitsReceivedDetail",
            "type": "object"
        },
        "Charge": {
            "additionalProperties": false,
            "properties": {
                "charge_no": {
                    "anyOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Charge number (1-indexed), automatically assigned after model creation",
                    "title": "Charge No"
                },
                "charge_name": {
                    "$ref": "#/$defs/ChargeName",
                    "description": "Name of the charge (offence), ignore charges not in the enumeration"
                },
                "offence_date": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/DateDetail"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "offence_time": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/TimeDetail"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "place_of_offence": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/PlaceOfOffence"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "cross_border": {
                    "$ref": "#/$defs/CrossBorderDetail",
                    "description": "Whether the trafficking involved cross-border activities."
                },
                "defendants_of_charge": {
                    "description": "List of charges for each defendant",
                    "items": {
                        "$ref": "#/$defs/ChargeForDefendant"
                    },
                    "title": "Defendants Of Charge",
                    "type": "array"
                }
            },
            "required": [
                "charge_name",
                "cross_border",
                "defendants_of_charge"
            ],
            "title": "Charge",
            "type": "object"
        },
        "ChargeForDefendant": {
            "additionalProperties": false,
            "properties": {
                "defendant_name": {
                    "description": "Full name of the defendant given the charge as appearing in the judgment",
                    "title": "Defendant Name",
                    "type": "string"
                },
                "defendant_id": {
                    "anyOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Defendant ID (1-indexed), automatically assigned based on first appearance order across all charges",
                    "title": "Defendant Id"
                },
                "trafficking_mode": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/TraffickingMode"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "reasons_for_offence": {
                    "anyOf": [
                        {
                            "items": {
                                "$ref": "#/$defs/ReasonForOffenceDetail"
                            },
                            "type": "array"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "title": "Reasons For Offence"
                },
                "benefits_received": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/BenefitsReceivedDetail"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Extract a monetary benefit only if the judgment explicitly says the defendant received: a \u2018payment\u2019, \u2018reward\u2019, \u2018profit\u2019, \u2018proceeds\u2019, \u2018benefit\u2019, \u2018gain\u2019, or \u2018income\u2019 from drug trafficking and for the defendant\u2019s personal benefit (not merely handled or transported).\nIgnore cash simply because it was found on the defendant\u2019s person or in a car/room; Do not infer benefits from drug quantity, street value, or general trafficking profitability; Attribute a benefit solely when the text clearly links that specific benefit to that defendant."
                }
            },
            "required": [
                "defendant_name"
            ],
            "title": "ChargeForDefendant",
            "type": "object"
        },
        "ChargeName": {
            "enum": [
                "Trafficking in a dangerous drug",
                "Trafficking in dangerous drugs",
                "Conspiracy to traffic in a dangerous drug",
                "Conspiracy to traffic in dangerous drugs"
            ],
            "title": "ChargeName",
            "type": "string"
        },
        "CrossBorderDetail": {
            "additionalProperties": false,
            "properties": {
                "cross_border": {
                    "description": "Whether the trafficking involved cross-border activities.",
                    "title": "Cross Border",
                    "type": "boolean"
                },
                "type": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/ImportExportEnum"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "description": "Indicates whether the cross-border trafficking was an import or export. Set to null if not mentioned."
                },
                "source": {
                    "description": "The exact match source text from which the cross-border trafficking was extracted. Do not include any additional information in the source document.",
                    "title": "Source",
                    "type": "string"
                }
            },
            "required": [
                "cross_border",
                "source"
            ],
            "title": "CrossBorderDetail",
            "type": "object"
        },
        "DateDetail": {
            "additionalProperties": false,
            "properties": {
                "date": {
                    "anyOf": [
                        {
                            "format": "date",
                            "type": "string"
                        },
                        {
                            "items": {
                                "format": "date",
                                "type": "string"
                            },
                            "type": "array"
                        }
                    ],
                    "description": "The date of offence in ISO 8601 format (YYYY-MM-DD), or a list of two elements if a date range is mentioned",
                    "title": "Date"
                },
                "source": {
                    "description": "The exact match source text from which the date was extracted. Do not include any additional information in the source document.",
                    "title": "Source",
                    "type": "string"
                }
            },
            "required": [
                "date",
                "source"
            ],
            "title": "DateDetail",
            "type": "object"
        },
        "ImportExportEnum": {
            "enum": [
                "import",
                "export"
            ],
            "title": "ImportExportEnum",
            "type": "string"
        },
        "NatureOfPlace": {
            "enum": [
                "Residential building",
                "Commercial building",
                "Industrial building",
                "Government or public building",
                "Entertainment venue",
                "Street",
                "Car park or parking lot",
                "Shopping mall",
                "Public transport",
                "Private vehicle",
                "Restaurant",
                "Educational institution",
                "Hospital or medical facility",
                "Outside methadone clinic",
                "Recreational area",
                "Hotel or guesthouse",
                "Construction site",
                "Vacant or abandoned property",
                "Border checkpoint",
                "Other"
            ],
            "title": "NatureOfPlace",
            "type": "string"
        },
        "PlaceOfOffence": {
            "additionalProperties": false,
            "properties": {
                "address": {
                    "description": "The full address of the place of offence",
                    "title": "Address",
                    "type": "string"
                },
                "nature": {
                    "$ref": "#/$defs/NatureOfPlace",
                    "description": "The nature of the place of offence."
                },
                "subDistrict": {
                    "$ref": "#/$defs/SubDistrict",
                    "description": "The sub-district within the district where the place of offence is located"
                },
                "source": {
                    "description": "The exact match source text from which the place of offence was extracted. Do not include any additional information in the source document.",
                    "title": "Source",
                    "type": "string"
                }
            },
            "required": [
                "address",
                "nature",
                "subDistrict",
                "source"
            ],
            "title": "PlaceOfOffence",
            "type": "object"
        },
        "ReasonForOffence": {
            "enum": [
                "Financial gain",
                "Economic hardship",
                "Coercion",
                "Deception",
                "Addiction-driven",
                "Peer influence",
                "Helping other people",
                "Other"
            ],
            "title": "ReasonForOffence",
            "type": "string"
        },
        "ReasonForOffenceDetail": {
            "additionalProperties": false,
            "properties": {
                "reason": {
                    "$ref": "#/$defs/ReasonForOffence",
                    "description": "Reasons for committing the offence. Financial gain: To obtain money, valuables, or other material benefit primarily for profit or improvement of lifestyle, and not mainly driven by financial difficulties or economic pressure; Economic hardship: Motivated primarily by financial difficulties facing the offender, such as debt, unemployment, inability to meet basic living expenses, or other economic pressures; Coercion: Compelled to commit the offence due to threats, intimidation, or pressure from criminal groups or other parties; Deception: Misled or deceived about the nature or consequences of the activity, leading to involvement in the offence; Addiction-driven: To support the individual's substance abuse or addiction, such as funding personal drug use; Peer influence: Influenced by social pressure or encouragement from peers or associates; Helping other people: Committed with the voluntary intent to assist or benefit another person (e.g., providing resources, support, or fulfilling a request), where this assistance is not driven by the offender's own financial need, coercion, deception, addiction, or peer pressure, and without expectation of material gain; "
                },
                "source": {
                    "description": "The exact match source text from which the reasons for committing the offence was extracted. Do not include any additional information in the source document.",
                    "title": "Source",
                    "type": "string"
                }
            },
            "required": [
                "reason",
                "source"
            ],
            "title": "ReasonForOffenceDetail",
            "type": "object"
        },
        "Representative": {
